{
  "name": "custom.remote.python.redisenterprise",
  "version": "0.1",
  "productiveMinVersion": "1.000",
  "requiredAgentVersion": "1.000",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "metricGroup": "Redis_Enterprise",
  "technologies": ["REDIS_ENTERPRISE"],
  "source": {
    "package": "active_gate_redisenterprise_plugin",
    "className": "RemoteRedisEnterprisePlugin",
    "install_requires": [
      "requests>=2.6.0"
    ],
    "activation": "Remote"
  },
  "ui" : { },
  "metrics": [
    { "timeseries": { "key": "redis_enterprise.license_days", "unit":"Count", "displayname": "License Days Remaining", "aggregation": "MIN", "entity": "CUSTOM_DEVICE"}},
    { "timeseries": { "key": "redis_enterprise.license_shards", "unit":"Count", "displayname": "Licensed Shards", "aggregation": "MIN", "entity": "CUSTOM_DEVICE"}}
   ],
  "properties": [
    {
      "key": "url",
      "type": "String"
    },
    {
      "key": "auth_user",
      "type": "String"
    },
    {
      "key": "auth_password",
      "type": "Password"
    },
    {
      "key": "state_interval",
      "type": "Integer",
      "defaultValue": 60
    },
    {
      "key": "alert_interval",
      "type": "Integer",
      "defaultValue": 360
    },
    {
      "key": "event_interval",
      "type": "Integer",
      "defaultValue": 240
    },
    {
      "key": "relative_interval",
      "type": "Integer",
      "defaultValue": 60
    }
  ],
"configUI" :{
    "displayName": "ActiveGate Redis Enterprise Extension",
        "properties" : [
          { "key" : "url", "displayName": "URL", "displayOrder": 3, "displayHint": "http://myredis.cluster.local:9443/" },
          { "key" : "auth_user", "displayName": "User", "displayOrder": 1, "displayHint": "redisadmin@example.com" },
          { "key" : "auth_password", "displayName": "Password", "displayOrder": 2, "displayHint": "myPassWord"},
          { "key" : "state_interval", "displayName": "State change interval", "displayOrder": 3, "displayHint": "How often state metrics changes", "defaultValue": 60},
          { "key" : "alert_interval", "displayName": "Alert interval", "displayOrder": 4, "displayHint": "How often an alert is raised", "defaultValue": 360},
          { "key" : "event_interval", "displayName": "Event interval", "displayOrder": 5, "displayHint": "How often an event is raised", "defaultValue": 240},
          { "key" : "relative_interval", "displayName": "Relative interval", "displayOrder": 6, "displayHint": "How often relative metric is submitted", "defaultValue": 60}
        ]
  }
}